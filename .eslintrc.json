{
  "extends": ["next/core-web-vitals", "prettier"],
  "ignorePatterns": ["**/node_modules/*", "**/public/*"],
  "plugins": ["tailwindcss"],
  "settings": {
    "tailwindcss": {
      "callees": ["cn", "cva"],
      "config": "tailwind.config.ts"
    }
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"]
    }
  ],
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": 0,
    "quotes": ["error", "double"],
    "semi": ["error", "always"]
  }
}
